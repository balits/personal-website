---
export interface Props {
	className?: string;
}
const { className } = Astro.props;
---

<div class={"text" +" " + className}>
	<a class="word">
		<span class="letter w-1-l-1">b</span>
		<span class="letter w-1-l-2">a</span>
		<span class="letter">l</span>
		<span class="letter">i</span>
		<span class="letter">t</span>
		<span class="letter">s</span>
	</a>
	<a class="word">
		<span class="letter">p</span>
		<span class="letter">e</span>
		<span class="letter">t</span>
		<span class="letter">e</span>
		<span class="letter">r</span>
	</a>
	<a class="word">
		<span class="letter">m</span>
		<span class="letter">a</span>
		<span class="letter">r</span>
		<span class="letter">t</span>
		<span class="letter">o</span>
		<span class="letter">n</span>
	</a>
</div>

<style>
	@keyframes PageLoadAnimation {
		0% {
			opacity: 0;
			transform: scale(0.80);
			transform: transformY(50%);
		},
		100% {
			opacity: 1;
			transform: scale(1);
			transform: transformY(0%);
		}
	}

	.text {
		display: flex;
		flex-direction: column;
		align-items: start;
		width: fit-content;
		height: fit-content;
  	animation: 1s ease-in-out 0s 1 PageLoadAnimation;
	}

	.text:has(.word:hover) .word:not(:hover) {
		opacity: .4;
		filter: blur(4px);
		transform: scale(0.70);
	}

	.word {
		display: flex;
		align-items: start;
		width: 100%;
		text-transform: uppercase;
		font-weight: 600;

		color: var(--jotaiWhite);
		cursor: pointer;

		transition-property: all;
		transition-timing-function: cubic-bezier(0.455, 0.03, 0.515, 0.955);
		transition-duration: 400ms;
	}

	.word:hover {
		transform: scale(1.3);
	}

	.letter {
		display: inline-block;
		transition-property: all;
		animation-timing-function: cubic-bezier(0.455, 0.03, 0.515, 0.955);
		transition-duration: 800ms;
		animation: none
	}

	/*=== WORD 1 ==='*/
	.word:nth-of-type(1):hover > .letter:nth-of-type(1) {
		transform: rotate(-20deg) translate(-80%, -20%);
	}
	.word:nth-of-type(1):hover > .letter:nth-of-type(2) {
		transform: rotate(10deg) translate(-80%, -60%);
	}
	.word:nth-of-type(1):hover > .letter:nth-of-type(3) {
		transform: rotate(-20deg) translate(-20%, -30%);
	}
	.word:nth-of-type(1):hover > .letter:nth-of-type(4) {
		transform: rotate(20deg) translate(-80%, -80%);
	}
	.word:nth-of-type(1):hover > .letter:nth-of-type(5) {
		transform: rotate(-10deg) translate(10%, 20%);
	}
	.word:nth-of-type(1):hover > .letter:nth-of-type(6) {
		transform: rotate(-20deg) translate(40%, -40%);
	}




	/*=== WORD 2 ==='*/
	.word:nth-of-type(2):hover > .letter:nth-of-type(1) {
		transform: rotate(15deg) translate(-80%, -100%);
	}
	.word:nth-of-type(2):hover > .letter:nth-of-type(2) {
		transform: rotate(-15deg) translate(-40%, -50%);
	}
	.word:nth-of-type(2):hover > .letter:nth-of-type(3) {
		transform: rotate(30deg) translate(-60%, -20%);
	}
	.word:nth-of-type(2):hover > .letter:nth-of-type(4) {
		transform: rotate(-15deg) translate(0%, 20%);
	}
	.word:nth-of-type(2):hover > .letter:nth-of-type(5) {
		transform: rotate(-15deg) translate(50%, 40%);
	}


	/*=== WORD 3 ==='*/
	.word:nth-of-type(3):hover > .letter:nth-of-type(1) {
		transform: rotate(-30deg) translate(-60%, 0%);
	}
	.word:nth-of-type(3):hover > .letter:nth-of-type(2) {
		transform: rotate(-15deg) translate(-60%, 0%);
	}
	.word:nth-of-type(3):hover > .letter:nth-of-type(3) {
		transform: rotate(20deg) translate(-60%, -20%);
	}
	.word:nth-of-type(3):hover > .letter:nth-of-type(4) {
		transform: rotate(-50deg) translate(20%, -20%);
	}
	.word:nth-of-type(3):hover > .letter:nth-of-type(5) {
		transform: rotate(180deg) translate(20%, -40%);
	}
	.word:nth-of-type(3):hover > .letter:nth-of-type(6) {
		transform: rotate(60deg) translate(60%,20%);
	}
</style>
